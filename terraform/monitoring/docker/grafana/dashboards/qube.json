{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"qube\"}[5m])) by (uri)",
          "legendFormat": "{{uri}}"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "title": "Response Time (95th percentile)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "http_server_requests_seconds{application=\"qube\",quantile=\"0.95\"}",
          "legendFormat": "{{uri}}"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 8
      },
      "id": 3,
      "title": "JVM Memory Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{application=\"qube\"}) / sum(jvm_memory_max_bytes{application=\"qube\"}) * 100",
          "legendFormat": "Memory Usage %"
        }
      ],
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "values": false
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "thresholds": {
          "mode": "absolute",
          "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 70 },
            { "color": "red", "value": 85 }
          ]
        }
      }
    },
    {
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 8
      },
      "id": 4,
      "title": "CPU Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "process_cpu_usage{application=\"qube\"} * 100",
          "legendFormat": "CPU Usage %"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 8
      },
      "id": 5,
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\",application=\"qube\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=\"qube\"}[5m])) * 100",
          "legendFormat": "Error %"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "id": 6,
      "title": "Active Threads",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_threads_live_threads{application=\"qube\"}",
          "legendFormat": "Live Threads"
        }
      ]
    },
    {
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "id": 7,
      "title": "Garbage Collection Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{application=\"qube\"}[5m])",
          "legendFormat": "GC Time"
        }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "title": "Qube Dashboard",
  "version": 1
}
